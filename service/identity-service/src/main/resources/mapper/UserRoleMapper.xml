<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaosa.clouddemo.mapper.UserRoleMapper">

    <resultMap id="BaseResultMap" type="com.xiaosa.clouddemo.entity.domain.UserRole">
            <result property="userId" column="user_id" />
            <result property="roleId" column="role_id" />
    </resultMap>

    <sql id="Base_Column_List">
        user_id,role_id
    </sql>
    <select id="selectByUserId" resultType="com.xiaosa.clouddemo.entity.domain.UserRole">
        SELECT <include refid="Base_Column_List"/>
        FROM user_role
            WHERE user_id = #{userId}

    </select>
</mapper>
