<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaosa.clouddemo.mapper.RoleMapper">

    <resultMap id="BaseResultMap" type="com.xiaosa.clouddemo.entity.domain.Role">
            <id property="roleId" column="role_id" />
            <result property="roleName" column="role_name" />
    </resultMap>

    <sql id="Base_Column_List">
        role_id,role_name
    </sql>
    <select id="selectRoleNameByRoleIds" resultType="com.xiaosa.clouddemo.entity.domain.Role">
        SELECT <include refid="Base_Column_List"/>
        FROM role
        WHERE role_id IN
        <foreach item="id" collection="roleIds" open="(" separator="," close=")">
            #{id}
        </foreach>
    </select>
</mapper>
