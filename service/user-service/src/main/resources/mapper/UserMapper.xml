<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.xiaosa.clouddemo.mapper.UserMapper">

    <resultMap id="BaseResultMap" type="com.xiaosa.clouddemo.domain.User">
            <id property="userId" column="user_id" />
            <result property="phone" column="phone" />
            <result property="password" column="password" />
            <result property="account" column="account" />
            <result property="userName" column="user_name" />
            <result property="sex" column="sex" />
            <result property="userStatus" column="user_status" />
            <result property="age" column="age" />
            <result property="money" column="money" />
            <result property="score" column="score" />
            <result property="email" column="email" />
            <result property="createTime" column="create_time" />
            <result property="updateTime" column="update_time" />
            <result property="logicDelete" column="logic_delete" />
    </resultMap>

    <sql id="Base_Column_List">
        user_id,phone,password,account,user_name,sex,
        user_status,age,money,score,email,
        create_time,update_time,logic_delete
    </sql>
    <select id="selectUserByIdWithLogicalDelete" resultType="com.xiaosa.clouddemo.domain.User">
        SELECT
        <include refid="Base_Column_List" />
        FROM user
        WHERE user_id = #{id}
        AND logic_delete = #{isLogicalDelete}
    </select>
</mapper>
